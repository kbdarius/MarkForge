<UserControl x:Class="MarkForge.App.Views.ConvertView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="22">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock FontSize="24" FontWeight="SemiBold" Text="Conversion Panel" />

            <GroupBox Grid.Row="1" Margin="0,16,0,0" Padding="12" Header="Inputs and Output">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="110" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Markdown file" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Margin="8,4"
                             Text="{Binding InputFilePath, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Grid.Row="0"
                            Grid.Column="2"
                            Margin="8,4"
                            Command="{Binding BrowseInputFileCommand}"
                            Content="Browse" />

                    <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Output folder" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Margin="8,4"
                             Text="{Binding OutputFolderPath, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Grid.Row="1"
                            Grid.Column="2"
                            Margin="8,4"
                            Command="{Binding BrowseOutputFolderCommand}"
                            Content="Browse" />

                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Reference template" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Margin="8,4"
                             Text="{Binding ReferenceTemplatePath, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Grid.Row="2"
                            Grid.Column="2"
                            Margin="8,4"
                            Command="{Binding BrowseTemplateFileCommand}"
                            Content="Browse" />

                    <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Lua filters folder" />
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Margin="8,4"
                             Text="{Binding LuaFiltersDirectoryPath, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Grid.Row="3"
                            Grid.Column="2"
                            Margin="8,4"
                            Command="{Binding BrowseLuaFiltersFolderCommand}"
                            Content="Browse" />
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="2" Margin="0,16,0,0" Padding="12" Header="Options">
                <StackPanel>
                    <CheckBox IsChecked="{Binding IncludeTableOfContents}" Content="Include table of contents" />
                    <CheckBox Margin="0,8,0,0"
                              IsChecked="{Binding UseLandscapeOrientation}"
                              Content="Use landscape orientation" />
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="Highlight style:" />
                        <ComboBox Width="160"
                                  Margin="8,0,0,0"
                                  ItemsSource="{Binding HighlightStyles}"
                                  SelectedItem="{Binding HighlightStyle}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <StackPanel Grid.Row="3" Margin="0,16,0,0">
                <WrapPanel>
                    <Button Height="34"
                            Margin="0,0,10,0"
                            Padding="14,0"
                            Command="{Binding RunConversionCommand}"
                            Content="Run Conversion" />
                    <Button Height="34"
                            Margin="0,0,10,0"
                            Padding="14,0"
                            Command="{Binding SaveSettingsCommand}"
                            Content="Save Settings" />
                    <Button Height="34" Padding="14,0" Command="{Binding LoadSettingsCommand}" Content="Reload Settings" />
                </WrapPanel>

                <TextBlock Margin="0,10,0,0"
                           FontWeight="SemiBold"
                           Foreground="#2E5B8D"
                           Text="{Binding StatusMessage}" />
                <TextBlock Margin="0,2,0,0" Foreground="#677488" Text="{Binding SettingsFilePath}" />

                <TextBlock Margin="0,10,0,2" FontWeight="SemiBold" Text="Last output DOCX" />
                <TextBox IsReadOnly="True" Text="{Binding LastOutputDocxPath}" />
                <TextBlock Margin="0,8,0,2" FontWeight="SemiBold" Text="Last detailed log file" />
                <TextBox IsReadOnly="True" Text="{Binding LastDetailedLogPath}" />
            </StackPanel>

            <GroupBox Grid.Row="4" Margin="0,16,0,0" Padding="12" Header="Run Log">
                <ListBox MinHeight="220" FontFamily="Consolas" ItemsSource="{Binding LogEntries}" />
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
